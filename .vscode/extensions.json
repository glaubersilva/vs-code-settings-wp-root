{
    "recommendations": [
        // Essential extensions for settings.json to work properly

        // PHP Development - Required for PHP formatting and IntelliSense
        "bmewburn.vscode-intelephense-client", // PHP IntelliSense, autocomplete, and navigation
        "junstyle.php-cs-fixer", // PHP CS Fixer for automatic code formatting

        // JavaScript/TypeScript Development - Required for formatting and linting
        "esbenp.prettier-vscode", // Code formatter for JS, TS, JSON, CSS, SCSS
        "dbaeumer.vscode-eslint", // ESLint for JavaScript/TypeScript linting
        "ms-vscode.vscode-typescript-next", // Enhanced TypeScript support

        // Recommended Extensions (Optional)

        // Productivity
        "wix.vscode-import-cost", // Shows imported package sizes
        "formulahendry.auto-rename-tag", // Auto-rename paired HTML/XML tags
        "formulahendry.auto-close-tag", // Auto-close HTML/XML tags
        "christian-kohler.path-intellisense", // File path autocomplete
        "christian-kohler.npm-intellisense", // Autocomplete for npm modules
        "CoenraadS.bracket-pair-colorizer-2", // Colorizes matching brackets

        // Git and Version Control
        "eamodio.gitlens", // Enhanced Git capabilities and visualization
        "ziyasal.vscode-open-in-github", // Open files in Git platforms

        // WordPress Development
        "johnbillion.vscode-wordpress-hooks", // WordPress hooks IntelliSense

        // Advanced PHP
        "neilbrayfield.php-docblocker", // PHP DocBlock generator
        "xdebug.php-debug", // PHP debugging support
        "vincaslt.highlight-matching-tag" // Highlights matching HTML/XML tags
    ]
}
